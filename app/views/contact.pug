doctype html
html
  head
    title Contact Us - Rental Properties
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css")
  body
    include navbar
    .container.mt-5
      .row
        .col-md-6
          h2 Get in Touch
          p.lead
            | Have questions or feedback? Contact us directly at
            a(href="mailto:support@rentalproperties.com") support@rentalproperties.com
          p
            | Or call us at: 
            strong +44 123 456 7890
          h4 Follow Us
          a.me-2(href="https://facebook.com", target="_blank") 
            i.bi.bi-facebook.text-primary
          a.me-2(href="https://twitter.com", target="_blank") 
            i.bi.bi-twitter.text-info
          a(href="https://linkedin.com", target="_blank") 
            i.bi.bi-linkedin.text-primary
        .col-md-6
          .form-section
            h3 Send Us a Message
            // Display Success or Error Messages
            if success
              .alert.alert-success= success
            if error
              .alert.alert-danger= error
            form(action="/submit-contact-form" method="POST")
              .mb-3
                label.form-label(for="name") Name
                input#name.form-control(type="text" name="name" placeholder="Your Full Name" required)
              .mb-3
                label.form-label(for="email") Email
                input#email.form-control(type="email" name="email" placeholder="Your Email Address" required)
              .mb-3
                label.form-label(for="message") Message
                textarea#message.form-control(name="message" rows="5" placeholder="Your Message" required)
              button.btn.btn-primary(type="submit") Submit
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")

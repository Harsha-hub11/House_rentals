doctype html
html
  head
    title Home - Rental Properties
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    style.
      .hero {
        background: url('./19198818.jpg') no-repeat center center/cover;
        height: 60vh;
        color: white;
        display: flex;
        justify-content: center;
        align-items: center;
        text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.7);
      }
      .review-card {
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }
  body
    include navbar
    .hero
      .text-center
        h1 Welcome to Rental Properties
        p.lead Find your next rental property easily and quickly.
        a.btn.btn-light.btn-lg.mt-3(href="/all-properties-formatted") Explore Properties

    .container.mt-5
      h2.text-center.mb-4 Our Happy Customers
      .row
        each review in reviews
          .col-md-4.mb-4
            .card.review-card
              .card-body
                h5.card-title= review.name
                p.card-text= review.comment
                small.text-muted= `Rated: ${review.rating} stars`


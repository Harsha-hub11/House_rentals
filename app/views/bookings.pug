doctype html
html
  head
    title All Bookings
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
  body
    include navbar1
    .container.mt-5
      h1.text-center All Bookings
      table.table.table-striped.table-bordered.mt-4
        thead
          tr
            th Booking ID
            th Property Address
            th Booking Date
            th Start Date
            th End Date
            th Customer Name
            th Customer Email
        tbody
          each booking in bookings
            tr
              td= booking.booking_id
              td= booking.address
              td= booking.booking_date
              td= booking.start_date
              td= booking.end_date
              td= booking.customer_name
              td= booking.customer_email

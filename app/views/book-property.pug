doctype html
html
  head
    title Book a Property
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    include navbar1
    .container.mt-5
      h1.text-center.mb-4 Book Your Property

      // Display error message
      if error
        .alert.alert-danger= error

      // Display success message
      if success
        .alert.alert-success= success

      .row
        .col-md-8.offset-md-2
          .card
            .card-header.bg-primary.text-white
              h4 Book a Property
            .card-body
              form(action=`/submit-booking/${property}` method="POST")
                .mb-3
                  label.form-label(for="start_date") Start Date
                  input#start_date.form-control(type="date" name="start_date" required)
                .mb-3
                  label.form-label(for="end_date") End Date
                  input#end_date.form-control(type="date" name="end_date" required)
                //- .mb-3
                //-   label.form-label(for="total_amount") Total Amount (Â£)
                //-   input#total_amount.form-control(type="number" step="0.01" name="total_amount" placeholder="Enter Total Amount" required)
                .mb-3
                  label.form-label(for="customer_name") Your Name
                  input#customer_name.form-control(type="text" name="customer_name" placeholder="Enter Your Full Name" required)
                .mb-3
                  label.form-label(for="customer_email") Your Email
                  input#customer_email.form-control(type="email" name="customer_email" placeholder="Enter Your Email Address" required)
                button.btn.btn-primary(type="submit") Submit Booking

